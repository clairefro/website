//- /blog
extends ../layouts/layout.pug

block head
  link(rel='stylesheet', href='/styles/main.css')
  title blog | clairefro
  meta(name='description', content='clairefro\'s blog. code and more`')
  meta(name='twitter:title', content='blog | clairefro')
  meta(name='twitter:description', content='clairefro\'s blog. code and more`')
  meta(property='og:title', content='blog | clairefro')
block content
  h1 Blog
  ul 
    each postPage in postPages
      li
        a(href=postPage.wwwLink) #{ postPage.title }
        span.date #{ ' ' }#{ postPage.published }
