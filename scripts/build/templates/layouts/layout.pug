- var defaultTitle = `clairefro`;
- var defaultDescription = `clairefro's corner of the internet`;
doctype html
html(lang='en')
  head
    //- defaults for all pages
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='icon', href='/assets/favicon.ico')

    meta(name='author', content='Claire Froelich')

    //- adding these meta tags as a block so I can override on some pages
    block meta
      meta(property='og:image', content='/assets/social.png')
      meta(name='twitter:card', content='summary_large_image')
      meta(name='twitter:site', content='@clairefroe')
      meta(
        name='twitter:image',
        content='https://clairefro.dev/assets/social.png'
      )
      meta(
        name='twitter:image:alt',
        content='Purple sweet potato on yellow background'
      )

    //- highlight.js
    link(
      rel='stylesheet',
      href='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/styles/default.min.css'
    )
    script(
      src='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/highlight.min.js'
    )

    //- additions and overrides
    block head
      title #{ defaultTitle }
      meta(name='twitter:title', content=defaultTitle)
      meta(name='twitter:description', content=defaultDescription)
      meta(name='description', content=defaultDescription)
      meta(property='og:title', content=defaultTitle)

  body
    .page
      div
        include ../includes/nav.pug
        block content

      .footer-spacer 

      block footer
        include ../includes/footer.pug

    script(src='/scripts/main.js')
    script.
      document.addEventListener('DOMContentLoaded', () => {
        hljs.highlightAll();
      });
